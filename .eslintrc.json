{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/class-name-casing": "warn",
        "@typescript-eslint/semi": "off",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-dupe-else-if": "warn",
        "no-lonely-if": "warn",
        "no-duplicate-case":"error",
        "no-throw-literal": "warn",
        "semi": "off"
    }
}
